<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <!-- Título da tela de configurações -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurações"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Alternar Notificações -->
    <Switch
        android:id="@+id/switch_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ativar Notificações"
        android:layout_marginBottom="20dp" />

    <!-- Seleção de Tema -->
    <TextView
        android:id="@+id/text_theme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modo Claro"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:padding="12dp"
        android:background="@drawable/button_background_gradient" />

    <!-- Ajustes de Uso de Dados -->
    <TextView
        android:id="@+id/text_data_usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uso de Dados"
        android:textSize="18sp"
        android:textStyle="bold"
        android:clickable="true"
        android:padding="12dp"
        android:background="@drawable/button_background_gradient" />

</LinearLayout>
